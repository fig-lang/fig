external console {
    fn log(n: i32);
}

builtin fn malloc(size: i32): i32;
builtin fn free(size: i32): i32;

fn len(str_ptr: i32): i32 {
    let length: i32 = 0;

    loop {
        if (str_ptr[length] == 0) { break; };

        length = length + 1;
    }

    return length;
}

fn drop(ptr: i32) {
    let i: i32 = 0;
    let length: i32 = len(ptr);
    free(length);
}

export fn main() {
    let x: i32 = malloc(5);

    x[0] = 1;
    x[1] = 2;

    drop(x);

    let y: i32 = malloc(2);

    y[0] = 3;

    log(y);
}
